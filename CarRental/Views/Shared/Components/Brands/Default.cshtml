@model List<Brand>

<div class="list-group">
    <a href="/cars" class="list-group-item list-group-item-action">Markalar</a>
    @foreach (var brand in Model)
    {
        <a asp-controller="cars" asp-action="carlist" asp-route-brand="@brand.Url"
       class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==brand.Url?"active":"")">@brand.Name</a>
    }
</div> 

